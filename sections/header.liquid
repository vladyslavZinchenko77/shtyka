<header class="bg-black flex items-center justify-between px-8 py-8">
  <div class="flex items-center">
  <h2 class="flex">
    <a href="{{ routes.root_url }}" class="text-xl font-bold text-white pr-4">
      {{ shop.name }}
    </a>
  </h2>

  <nav class="flex space-x-6">
    {% for link in linklists[section.settings.menu].links %}
      <a href="{{ link.url }}" class="flex text-md font-medium text-gray-200 hover:text-white">
        {{ link.title }}
      </a>
    {% endfor %}
  </nav>
</div>
  <div class="flex items-center space-x-4">
      <a href="{{ routes.account_url }}" class="relative text-gray-200 hover:text-white">
        {{ 'icon-account.svg' | inline_asset_content }}
      </a>
    <a href="{{ routes.cart_url }}" class="relative text-gray-200 hover:text-white">
      {{ 'icon-cart.svg' | inline_asset_content }}
    </a>
  </div>
</header>

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
