{%- comment -%}
  Liquid snippet for rendering SVG icons.
  Accepts:
  - type: (string) The type of icon to render (e.g., 'cart', 'user', 'search').
  - class: (string, optional) Additional Tailwind CSS classes to apply to the icon wrapper.

  Usage:
  {% render 'icon', type: 'cart', class: 'text-blue-500 w-8 h-8' %}
{%- endcomment -%}

{%- assign icon_type = type | default: 'default' -%}
{%- assign icon_class = class | default: '' -%}

<span class="icon icon--{{ icon_type }} {{ icon_class }}">
  {%- case icon_type -%}
    {%- when 'cart' -%}
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="none" class="w-6 h-6"> {# Добавлены w-6 h-6 #}
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
          stroke-width="var(--icon-stroke-width, 1.5)" {# Добавлено значение по умолчанию для var() #}
          d="M3.392 6.875h13.216v8.016c0 .567-.224 1.112-.624 1.513-.4.402-.941.627-1.506.627H5.522a2.13 2.13 0 0 1-1.506-.627 2.15 2.15 0 0 1-.624-1.513zM8.818 2.969h2.333c.618 0 1.211.247 1.649.686a2.35 2.35 0 0 1 .683 1.658v1.562H6.486V5.313c0-.622.246-1.218.683-1.658a2.33 2.33 0 0 1 1.65-.686" />
      </svg>
    {%- when 'user' -%}
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="none" class="w-6 h-6"> {# Добавлены w-6 h-6 #}
        <circle cx="10" cy="6.5" r="2.75" stroke="currentColor" stroke-width="var(--icon-stroke-width, 1.5)" /> {# Добавлено значение по умолчанию для var() #}
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
          stroke-width="var(--icon-stroke-width, 1.5)" {# Добавлено значение по умолчанию для var() #}
          d="m5.172 14.591-.437.786a.588.588 0 0 0 .514.873h9.502a.588.588 0 0 0 .514-.873l-.437-.786a5.523 5.523 0 0 0-9.656 0" />
      </svg>
    {%- else -%}
      {% comment %} Spare icon or nothing if type not found {% endcomment %}
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
        <line x1="12" y1="9" x2="12" y2="13"></line>
        <line x1="12" y1="17" x2="12.01" y2="17"></line>
      </svg>
  {%- endcase -%}
</span>