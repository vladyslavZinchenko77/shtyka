    {%- else -%}
      {% comment %} Spare icon or nothing if type not found {% endcomment %}
      <svg
        xmlns='http://www.w3.org/2000/svg'
        viewBox='0 0 24 24'
        fill='none'
        stroke='currentColor'
        stroke-width='2'
        stroke-linecap='round'
        stroke-linejoin='round'
        class='w-6 h-6'
